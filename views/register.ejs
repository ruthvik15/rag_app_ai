<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: linear-gradient(135deg, #e0f7fa, #e1bee7);
    }

    .register-container {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 16px;
      padding: 2.5rem 2rem;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      text-align: center;
      transition: transform 0.3s ease;
    }

    .register-container:hover {
      transform: translateY(-4px);
    }

    .register-container h2 {
      margin-bottom: 1.5rem;
      color: #333;
      font-weight: 600;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
    }

    input[type="email"],
    input[type="password"] {
      padding: 0.75rem 1rem;
      border: 1px solid #ccc;
      border-radius: 10px;
      font-size: 1rem;
      background-color: #f9f9f9;
      transition: border-color 0.2s ease;
    }

    input:focus {
      outline: none;
      border-color: #9575cd;
      background-color: #fff;
    }

    .password-toggle {
      position: relative;
    }

    .toggle-icon {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      font-size: 1.1rem;
      color: #999;
    }

    button {
      padding: 0.75rem;
      background: linear-gradient(to right, #7e57c2, #64b5f6);
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background: linear-gradient(to right, #5e35b1, #42a5f5);
      transform: scale(1.02);
    }

    .login-link {
      margin-top: 1rem;
      display: inline-block;
      color: #5e35b1;
      font-size: 0.95rem;
      text-decoration: none;
      transition: text-decoration 0.2s;
    }

    .login-link:hover {
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .register-container {
        padding: 2rem 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="register-container">
    <h2>Create Account</h2>
    <form action="/register" method="POST">
      <input type="email" name="email" placeholder="Email" required />
      <div class="password-toggle">
        <input type="password" name="password" id="reg-password" placeholder="Password" required />
        <span class="toggle-icon" onclick="togglePassword()">üëÅÔ∏è</span>
      </div>
      <% if (errorMessage) { %>
        <div class="error-message" style="color: red;"><%= errorMessage %></div>
      <% } %>
      <button type="submit">Register</button>
    </form>
    <a class="login-link" href="/">Already have an account? Login</a>
  </div>

  <script>
    function togglePassword() {
      const pw = document.getElementById('reg-password');
      pw.type = pw.type === 'password' ? 'text' : 'password';
    }
  </script>
</body>
</html> 